<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.net.*?>
<?import java.util.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<ScrollPane fx:id="rootPane" prefHeight="720" prefWidth="1280" styleClass="rootPane" xmlns:fx="http://javafx.com/fxml/1" fx:controller="viewmodel.HomeViewModel">
    <stylesheets>
        <URL value="@/design/Style.css"/>
    </stylesheets>
    <content>
    <VBox>
        <children>
            <HBox styleClass="topBar">
                <children>
                    <Label styleClass="h1">Home</Label>
                </children>
            </HBox>
            <VBox styleClass="vBoxList">
                <children>
                    <ImageView fx:id="profileImg" styleClass="profileImage">
                        <image>
                        </image>
                    </ImageView>
                    <Label styleClass="h2" fx:id="welcomeLbl">WelcomeMessage</Label>
                </children>
            </VBox>
            <GridPane alignment="CENTER_LEFT">
                <VBox styleClass="hBoxList" GridPane.rowIndex="0" >
                    <children>
                        <Button fx:id="myEventsBtn" styleClass="basicButtonDark" GridPane.columnIndex="0" prefWidth="256">
                            My Events
                        </Button>
                        <Button fx:id="myInvitationsBtn" styleClass="basicButtonDark" GridPane.columnIndex="0" prefWidth="256">
                            My Invitations
                        </Button>
                        <Button fx:id="myAcceptedInvitationsBtn" styleClass="basicButtonDark" GridPane.columnIndex="0" prefWidth="256">
                            Accepted Invites
                        </Button>
                        <Button fx:id="myAccountBtn" styleClass="basicButtonDark" GridPane.columnIndex="0" prefWidth="256">
                            My Account
                        </Button>
                        <Button fx:id="calendarBtn" styleClass="basicButtonDark" GridPane.columnIndex="0" prefWidth="256">
                            My Calendar
                        </Button>
                        <Button fx:id="myLocationsBtn" styleClass="basicButtonDark" GridPane.columnIndex="0" prefWidth="256">
                            My Locations
                        </Button>
                    </children>
                </VBox>
            </GridPane>
        </children>
    </VBox>
    </content>
</ScrollPane>
