<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.net.*?>
<?import java.util.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<ScrollPane fx:id="rootPane" prefHeight="720" prefWidth="1280" styleClass="rootPane" xmlns:fx="http://javafx.com/fxml/1" fx:controller="viewmodel.LoginViewModel">
    <stylesheets>
        <URL value="@/design/Style.css"/>
    </stylesheets>
    <content>
    <VBox>
        <children>
            <HBox styleClass="topBar">
                <children>
                    <Label styleClass="h1">Login</Label>
                </children>
            </HBox>
            <VBox>
                <Label styleClass="h1">Please enter your credentials</Label>
                <TextField maxWidth="512" styleClass="basicTextField" promptText="Mail" fx:id="mailTxtFld"></TextField>
                <PasswordField maxWidth="512" styleClass="basicTextField" promptText="Password" fx:id="passwordTxtFld"></PasswordField>
                <Button 
                    styleClass="basicButtonDark" fx:id="loginBtn" prefWidth="256">Login
                </Button> 
                <Button styleClass="basicButtonDark" fx:id="createAccBtn" prefWidth="256">New Account</Button>               
            </VBox>

        </children>
    </VBox>
    </content>
</ScrollPane>