<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.net.*?>
<?import java.util.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<ScrollPane fx:id="rootPane" prefHeight="720" prefWidth="1280" styleClass="rootPane" xmlns:fx="http://javafx.com/fxml/1" fx:controller="viewmodel.UserOwnedLocationsViewModel">
    <stylesheets>
        <URL value="@/design/Style.css"/>
    </stylesheets>
    <content>
    <VBox>
        <children>
            <VBox styleClass="topBar"  >
                <children>
                    <Label styleClass="h1">My Locations</Label>
                    <VBox>
                        <Button styleClass="basicButton" fx:id="homeBtn">
                            <graphic>
                              <ImageView fitHeight="32.0" fitWidth="32.0" preserveRatio="true">
                                <image>
                                  <Image url="img/baseline_home_black_18dp.png" />
                                </image>
                              </ImageView>
                            </graphic>
                        </Button>
                    </VBox>
                </children>
            </VBox>
            <VBox>
                <children>
                    <VBox fx:id="locationsBox" styleClass="hBoxList">
                        <children>
                         <Button fx:id="newLocationBtn" styleClass="basicButtonDark" GridPane.columnIndex="0" prefWidth="256">
                            Create Location
                         </Button>
                        </children>
                    </VBox>
                </children>
            </VBox>
        </children>
    </VBox>
    </content>
</ScrollPane>