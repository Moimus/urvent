<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.net.*?>
<?import java.util.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<ScrollPane fx:id="rootPane" prefHeight="720" prefWidth="1280" styleClass="rootPane" xmlns:fx="http://javafx.com/fxml/1" fx:controller="viewmodel.CreateLocationViewModel">
    <stylesheets>
        <URL value="@/design/Style.css"/>
    </stylesheets>
    <content>
    <VBox>
        <children>
            <VBox styleClass="topBar"  >
                <children>
                    <Label styleClass="h1">Create Location</Label>
                    <VBox>
                        <Button styleClass="basicButton" fx:id="homeBtn">
                            <graphic>
                              <ImageView fitHeight="32.0" fitWidth="32.0" preserveRatio="true">
                                <image>
                                  <Image url="img/baseline_home_black_18dp.png" />
                                </image>
                              </ImageView>
                            </graphic>
                        </Button>
                    </VBox>
                </children>
            </VBox>
            <VBox>
                <children>
                    <TextField fx:id="nameTxtFld" maxWidth="512" styleClass="basicTextField" promptText="Locationname"></TextField>
                    <TextField fx:id="descrTxtFld" maxWidth="512" styleClass="basicTextField" promptText="Description"></TextField>
                    <TextField fx:id="coordinatesTxtFld" maxWidth="512" styleClass="basicTextField" promptText="Coordinates(Lat,Long)"></TextField>
                    <Button fx:id="submitBtn" styleClass="basicButtonDark" GridPane.columnIndex="0" prefWidth="256">Submit</Button>
                    <Button fx:id="cancelBtn" styleClass="basicButtonDark" GridPane.columnIndex="0" prefWidth="256">Cancel</Button>
                </children>
            </VBox>
        </children>
    </VBox>
    </content>
</ScrollPane>